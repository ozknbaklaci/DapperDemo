@model IEnumerable<DapperDemo.Models.Company>

<div class="row">
        <div class="col-3 offset-6">
            <a class="btn btn-success form-control" asp-action="AddTestRecords">Add Dummy Records</a>
        </div>
        <div class="col-3">
            <a class="btn btn-danger form-control" asp-action="RemoveTestRecords">Remove Dummy Records</a>
        </div>
    </div>

@foreach (var company in Model)
{
    <h1>@company.Name</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => company.Employees.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => company.Employees.FirstOrDefault().Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => company.Employees.FirstOrDefault().Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => company.Employees.FirstOrDefault().Title)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in company.Employees)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}